# Enable hoisting for better performance
hoist-pattern[]=*

# Strict peer dependencies
strict-peer-dependencies=false

# Auto install peers
auto-install-peers=true

# Enable shamefully-hoist for compatibility
shamefully-hoist=true

# Save exact versions
save-exact=true

# Use https registry
registry=https://registry.npmjs.org/

# Enable public access for scoped packages
@zeno:registry=https://registry.npmjs.org/